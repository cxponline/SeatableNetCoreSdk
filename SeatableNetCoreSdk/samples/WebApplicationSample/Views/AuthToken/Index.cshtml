@model AuthViewModel
@{
    ViewData["Title"] = "全局登录";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">        
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ol>
</nav>
<br />
<div class="card">
    <div class="card-body">
        <form asp-controller="AuthToken" asp-action="AuthToken">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input type="text" class="form-control" asp-for="UserName" value="" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" class="form-control" asp-for="Password" value="" />
            </div>
            <button type="submit" class="btn btn-primary">提交请求</button>
        </form>
        <hr />       
    </div>
</div>